function bluetooth_toggle () {
    export bluetooth_status=$(rfkill list bluetooth | grep -i -o "Soft blocked: yes")
    export backup_file=~/.cache/airplane_backup

    if [ -z "$bluetooth_status" ]; then
        rfkill block bluetooth
    else
        rfkill unblock bluetooth
        if [ -e $backup_file ]; then
            rm $backup_file
        fi
    fi
}
